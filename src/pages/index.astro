---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/Hero/hero";
import Aboute from "../components/About/aboute";
import Skills from "../components/Skills/skills";
import TimelineMe from "../components/Timeline/timeline";
import ProjectsCv from "../components/Projects/projects";
import ContactForm from "../components/Contact/contact";
import Footer from "../components/Footer/footer";

import ProgressBar from "../components/Util/ProgressBar";

import "../styles/global.css";
---

<Layout title="Curriculum Emily Orduz 🍥">
  <main>
    <ProgressBar client:only="react" />
    <Hero client:only="react" />
    <Aboute client:idle />
    <Skills client:only="react" />
    <TimelineMe client:idle />
    <ProjectsCv client:only="react" />
    <ContactForm client:only="react" />
    <Footer client:only="react" />
  </main>
</Layout>

<style>
  main {
    margin: auto;
  }

  #loading {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    font-size: 2rem;
    color: #333;
  }
</style>
